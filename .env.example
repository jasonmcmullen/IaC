# Home Server IaC Environment Configuration
# Copy this file to .env and customize for your environment

# General Settings
TZ=UTC
DOMAIN=homeserver.local
COMPOSE_PROJECT_NAME=homeserver

# Network Configuration
NETWORK_NAME=homeserver
EXTERNAL_IP=192.168.1.100

# Tools and Utilities

## File Browser
FILE_BROWSER_PORT=8080
FILE_BROWSER_ROOT=/mnt/media

## Vaultwarden
VAULTWARDEN_PORT=8000
VAULTWARDEN_ADMIN_TOKEN=your-secure-token-here
VAULTWARDEN_DOMAIN=vaultwarden.homeserver.local
VAULTWARDEN_LOG_LEVEL=info

## Hoarder
HOARDER_PORT=3000
HOARDER_DB_PASSWORD=hoarder-db-password

## Portainer
PORTAINER_PORT=9000
PORTAINER_EDGE_PORT=8001

## Cockpit
COCKPIT_PORT=9090

## OctoPrint
OCTOPRINT_PORT=5000

# Dashboards

## Glance
GLANCE_PORT=8081

## Homarr
HOMARR_PORT=7575

# Media Server

## Jellyfin
JELLYFIN_PORT=8096
JELLYFIN_DISCOVERY_PORT=7359

## Plex
PLEX_PORT=32400
PLEX_CLAIM_TOKEN=

## Tautulli
TAUTULLI_PORT=8181

# Media Management

## Overseerr
OVERSEERR_PORT=5055

## Radarr
RADARR_PORT=7878

## Sonarr
SONARR_PORT=8989

## Lidarr
LIDARR_PORT=8686

## Bazarr
BAZARR_PORT=6767

## Prowlarr
PROWLARR_PORT=9696

# Download Clients

## qBittorrent
QBITTORRENT_PORT=6881
QBITTORRENT_UI_PORT=8200
QBITTORRENT_PASSWORD=your-password-here

## NZBGet
NZBGET_PORT=6789
NZBGET_PASSWORD=your-password-here

# Files and Images

## Nextcloud
NEXTCLOUD_PORT=8888
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your-secure-password-here
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.homeserver.local
MYSQL_ROOT_PASSWORD=mysql-root-password
MYSQL_PASSWORD=mysql-password

## Immich
IMMICH_PORT=2283
IMMICH_SERVER_URL=http://immich-server:3001
IMMICH_API_KEY=

## Docmost
DOCMOST_PORT=3001

# Smart Home and Automation

## Home Assistant
HOMEASSISTANT_PORT=8123
HOMEASSISTANT_LATITUDE=0.0
HOMEASSISTANT_LONGITUDE=0.0
HOMEASSISTANT_ELEVATION=0

## Frigate
FRIGATE_PORT=5000
FRIGATE_STATS_PORT=8554

## Zigbee2MQTT
ZIGBEE2MQTT_PORT=8080
ZIGBEE2MQTT_USB_PATH=/dev/ttyUSB0
ZIGBEE2MQTT_PANID=0x1a62

# DNS and Remote Connections

## Pi-hole
PIHOLE_PORT=80
PIHOLE_DNS_PORT=53
PIHOLE_ADMIN_PASSWORD=your-password-here
PIHOLE_QUERY_LOG=true

## NGINX Proxy Manager
NGINX_PROXY_MANAGER_PORT=81
NGINX_PROXY_MANAGER_SSL_PORT=443
NGINX_PROXY_MANAGER_ADMIN_PORT=81

## Cloudflare DDNS
CLOUDFLARE_API_TOKEN=your-api-token-here
CLOUDFLARE_ZONE_ID=your-zone-id-here
CLOUDFLARE_DNS_RECORDS=example.com

# Data and Metrics

## Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=365

## Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-password-here
GRAFANA_DOMAIN=grafana.homeserver.local

## InfluxDB 2.0
INFLUXDB_PORT=8086
INFLUXDB_ADMIN_TOKEN=your-token-here
INFLUXDB_ORG=homeserver
INFLUXDB_BUCKET=homeserver

## Node Exporter
NODE_EXPORTER_PORT=9100

## TeslaMate
TESLAMATE_PORT=4000
TESLAMATE_DB_USER=teslamate
TESLAMATE_DB_PASSWORD=teslamate-password
TESLAMATE_ENCRYPTION_KEY=your-encryption-key-here

# Storage Configuration
VOLUMES_ROOT=/docker-volumes
MEDIA_PATH=/mnt/media
BACKUP_PATH=/mnt/backups

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres-password
MYSQL_USER=homeserver
